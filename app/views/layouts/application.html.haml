/[if lt IE 7 ] <html class="ie6" lang="en">
/[if IE 7 ] <html class="ie7" lang="en">
/[if IE 8 ] <html class="ie8" lang="en">
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "FAF-Labs"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/custom.modernizr"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Inconsolata"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,400,700"
    = csrf_meta_tags
  %body
    %header
      .row
        .small-4.large-6.columns
          #logo FAF-labs
    = yield
    = javascript_include_tag "application"
